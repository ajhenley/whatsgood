        <%= f.error_messages %>
      </div>
    <% end %>
    <%= f.form_group :description do |f| %>
      <%= f.label :description, class: 'col-md-2 control-label' %>
      <div class='col-md-10'>
        <%= f.text_field :description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
    <%= f.form_group :social_twitter do |f| %>
      <%= f.label :social_twitter, class: 'col-md-2 control-label' %>
      <div class='col-md-10'>
        <%= f.text_field :social_twitter, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
    <%= f.form_group :social_fb do |f| %>
