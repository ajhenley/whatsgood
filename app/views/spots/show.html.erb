<% content_for :class, "scaffold" %>


   <div class="section section-gray">
        <div class="container">
            <div class="team-presentation">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-user">
                            <div class="image">
                                <%= image_tag("gsdk_pro/thumb.jpg", alt: "...") %>
                            </div>
                            <div class="content">
                                <div class="author">
                                    <a href="#">
                                    <%= image_tag("gsdk_pro/thumb.jpg", alt: "...", class:"avatar") %>
                                    <h4 class="title"><%= @spot.name %><br />
                                        <small><%= @spot.description %></small>
                                    </h4>
                                    </a>
                                </div>
                                <p class="description text-center">
                                    <i class="fa fa-map-marker fa-fw text-muted"></i> <%= @spot.address %> <br/>
                                    <i class="fa fa-building-o fa-fw text-muted"></i> <%= @spot.address %> <br/>
                                    <i class="fa fa-phone fa-fw text-muted"></i> <%= @spot.phone %> <br/>
                                    <i class="fa fa-clock-o fa-fw text-muted"></i> <%= @spot.hours %>
                                </p>
                            </div>
                            <hr>
                            <div class="text-center">
                                <button href="<%= @spot.social_twitter %>" class="btn btn-social btn-facebook btn-simple"><i class="fa fa-facebook-square"></i></button>
                                <button href="#" class="btn btn-social btn-twitter btn-simple"><i class="fa fa-twitter"></i></button>
                                <button href="#" class="btn btn-social btn-google btn-simple"><i class="fa fa-google-plus-square"></i></button>

                            </div>
                        </div> <!-- end card-->
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end section meet our team -->


<div class="page-header">
  <div class="container">
    <h2>Showing spot</h2>
  </div>
</div>

<div class="container">
  <div class="form-horizontal">
    <div class="form-group">
      <label class="col-md-2 control-label">Name</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.name %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Hours</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.hours %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Phone</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.phone %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Address</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.address %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Description</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.description %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Social twitter</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.social_twitter %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Social fb</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.social_fb %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Social isntagram</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.social_isntagram %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Social pinsterest</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.social_pinsterest %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Tags</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.tags %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="form-actions col-md-offset-2 col-md-10">
    <%= link_to fa_icon_tag("pencil") + ' Edit', edit_spot_path(@spot), class: 'btn btn-primary' %>
    <%= link_to 'Back', spots_path, class: 'btn' %>
  </div>
</div>

