<div class="page-header">
  <div class="container">
    <h2>Sign up</h2>
  </div>
</div>

<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { novalidate: true, class: "form-horizontal" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.form_group :email do |f| %>
        <%= f.label :email, class: 'col-md-2 control-label' %>
        <div class='col-md-10'>
          <%= f.email_field :email, required: true, autofocus: true, class: 'form-control' %>
          <%= f.error_messages %>
        </div>
      <% end %>

      <%= f.form_group :password do |f| %>
        <%= f.label :password, class: 'col-md-2 control-label' %>
        <div class='col-md-10'>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          <%= f.error_messages %>
        </div>
      <% end %>

      <%= f.form_group :password_confirmation do |f| %>
        <%= f.label :password_confirmation, class: 'col-md-2 control-label' %>
        <div class='col-md-10'>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          <%= f.error_messages %>
        </div>
      <% end %>
    </div>

    <div class="actions col-md-offset-2 col-md-10">
      <%= f.submit "Sign up", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <div class="col-md-offset-2 col-md-10">
    <br/>
    <%= render "devise/shared/links" %>
  </div>
</div>
