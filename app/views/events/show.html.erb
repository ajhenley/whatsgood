<% content_for :class, "scaffold" %>


<br />
<br />
<br />


<div class="container" style="margin-top: 20px; margin-bottom: 20px;">
  <div class="row panel">
    <div class="col-md-4 bg_blur" >
    </div>
    <div class="col-md-8  col-xs-12">
      <div class="header">
        <h2><%= @event.what %> @ <%= link_to @spot.name, @spot %></h2>

        <p class="description ">
          <span><%= @event.description %></span> <br>
          <span><b><%= @event.when.strftime("%a, %b %d, %Y") %></b> / <%= @event.when.strftime("%I:%M %p") %> - <%= @event.whenend.strftime("%I:%M %p") %></span> <br><br>
          <i class="fa fa-map-marker fa-fw text-muted"></i> <%= @spot.address %> <br/>
          <i class="fa fa-phone fa-fw text-muted"></i> <%= @spot.phone %> <br/>
          <i class="fa fa-clock-o fa-fw text-muted"></i> <%= @spot.hours %> <br />
          <i class="fa fa-info fa-fw text-muted"></i> <a href="<%= @event.link %>">More Info...</a>

        </p>

      </div>
    </div>
  </div>
</div>
<% if user_signed_in? && isEventOwner(@event) %>
    <div class="container">
      <%= link_to fa_icon_tag("clone") + ' Copy', new_event_path(:original => @event.id), class: 'btn btn-primary' %>

    </div>
<% end %>
  <style>
    .bg_blur
    {
      background-image: url(<%= @event.image %>);
      height: 300px;
      background-size: cover;
    }
  </style>