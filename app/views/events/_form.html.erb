<%= form_for(@event, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :what do |f| %>
      <%= f.label :what, class: 'col-md-2 control-label' %>
      <div class='col-md-10'>
        <%= f.text_field :what, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
    <%= f.form_group :image do |f| %>
        <%= f.label :image, class: 'col-md-2 control-label' %>
        <div class='col-md-10'>
          <%= f.file_field :image, class: 'form-control' %>
          <%= f.error_messages %>
        </div>
    <% end %>
    <%= f.form_group :description do |f| %>
      <%= f.label :description, class: 'col-md-2 control-label' %>
      <div class='col-md-10'>
        <%= f.text_area :description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
    <%= f.form_group :link do |f| %>
        <%= f.label :link, class: 'col-md-2 control-label' %>
        <div class='col-md-10'>
          <%= f.text_field :link, class: 'form-control' %>
          <%= f.error_messages %>
        </div>
    <% end %>
    <%= f.form_group :when do |f| %>
      <%= f.label :when, class: 'col-md-2 control-label' %>
      <div class='col-md-10'>
        <%= f.datetime_select :when, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
    <%= f.form_group :whenend do |f| %>
        <%= f.label :whenend, class: 'col-md-2 control-label' %>
        <div class='col-md-10'>
          <%= f.datetime_select :whenend, class: 'form-control' %>
          <%= f.error_messages %>
        </div>
    <% end %>
    <%= f.hidden_field :spots_id, value: @spotid %>
    <div class="form-group">
      <%= f.label :category, class: 'col-md-2 control-label' %>
      <div class="col-md-10">
        <select name="event[category]" id="event_category" class="selectpicker" data-style="btn-info btn-fill btn-block">
          <option disabled selected> Choose category</option>
          <option value="drinks">Drinks </option>
          <option value="music">Music </option>
          <option value="dance">Dancing </option>
          <option value="food">Food </option>
          <option value="comedy">Comedy </option>
          <option value="stage">Theater </option>
          <option value="film">Film </option>
          <option value="speech">Speech </option>
          <option value="meeting">Meeting </option>
          <option value="art">Art </option>
          <option value="other">Other </option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label" for="event_duplicate">Repeating Event?</label>
      <div class="col-md-10">
        <select name="event[duplicate]" id="event_duplicate" class="selectpicker" data-style="btn-info btn-fill btn-block">
          <option disabled selected> Choose a way of repeating</option>
          <option value="none">Do not repeat this event </option>
          <option value="everyday">Every day for the next __ days</option>
          <option value="everyweekday">Every weekday for the next __ days </option>
          <option value="everyweek">Same day every week for the next __ weeks </option>
          <option value="everyweekendday">Every weekend day for the next __ days </option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label" for="event_repcount">How often?</label>
      <div class='col-md-10'>
        <input id="event_repcount" name="event[repcount]" class="form-control"  type="number" min="0" max="10" />
      </div>
    </div>
  </div>
  <br />

  <div class="form-actions col-md-offset-2 col-md-10">
    <%= f.submit @button, class: 'btn btn-primary' %>
    <%= link_to "Cancel", events_path, class: 'btn' %>
  </div>
<% end %>
