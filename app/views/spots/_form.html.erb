      <%= f.label :name, class: 'col-md-2 control-label' %>
      <div class='col-md-10'>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
    <%= f.form_group :hours do |f| %>
      <%= f.label :hours, class: 'col-md-2 control-label' %>
