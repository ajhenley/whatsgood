<%% content_for :class, "scaffold" %>

<div class="page-header">
  <div class="container">
    <h2>Showing <%= singular_table_name %></h2>
  </div>
</div>

<div class="container">
  <div class="form-horizontal">
    <%- attributes.each do |attribute| -%>
    <div class="form-group">
      <label class="col-md-2 control-label"><%= attribute.human_name %></label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%%= @<%= singular_table_name %>.<%= attribute.name %> %>
          </span>
        </div>
      </div>
    </div>
    <%- end -%>
  </div>
  <div class="form-actions col-md-offset-2 col-md-10">
    <%%= link_to fa_icon_tag("pencil") + ' Edit', edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), <%= GsdkPro.key_value :class, "'btn btn-primary'" %> %>
    <%%= link_to 'Back', <%= index_helper %>_path, <%= GsdkPro.key_value :class, "'btn'" %> %>
  </div>
</div>
