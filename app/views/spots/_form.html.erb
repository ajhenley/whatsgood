        <%= f.text_field :social_pinsterest, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
    <%= f.form_group :tags do |f| %>
      <%= f.label :tags, class: 'col-md-2 control-label' %>
      <div class='col-md-10'>
        <%= f.text_field :tags, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
  </div>

  <div class="form-actions col-md-offset-2 col-md-10">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", spots_path, class: 'btn' %>
  </div>
<% end %>
