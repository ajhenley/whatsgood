<div class="page-header">
  <div class="container">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
  </div>
</div>

<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, novalidate: true, class: "form-horizontal" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.form_group :email do |f| %>
        <%= f.label :email, class: 'col-md-2 control-label' %>
        <div class='col-md-10'>
          <%= f.email_field :email, required: true, autofocus: true, class: 'form-control' %>
          <%= f.error_messages %>
        </div>
      <% end %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <%= f.form_group :password do |f| %>
        <%= f.label :password, class: 'col-md-2 control-label' %>
        <div class='col-md-10'>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          <%= f.error_messages %>
          <div class="help-inline">
            Leave it blank if you don't want to change it.
          </div>
        </div>
      <% end %>

      <%= f.form_group :password_confirmation do |f| %>
        <%= f.label :password_confirmation, class: 'col-md-2 control-label' %>
        <div class='col-md-10'>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          <%= f.error_messages %>
        </div>
      <% end %>

      <%= f.form_group :current_password do |f| %>
        <%= f.label :current_password, class: 'col-md-2 control-label' %>
        <div class='col-md-10'>
          <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
          <%= f.error_messages %>
          <div class="help-inline">
            We need your current password to confirm your changes.
          </div>
        </div>
      <% end %>
    </div>

    <div class="actions col-md-offset-2 col-md-10">
      <%= f.submit "Update", class: 'btn btn-primary' %>
      <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
    </div>
  <% end %>
</div>
