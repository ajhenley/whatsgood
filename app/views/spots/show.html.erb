<% content_for :class, "scaffold" %>

<div class="page-header">
  <div class="container">
    <h2>Showing spot</h2>
  </div>
</div>

<div class="container">
  <div class="form-horizontal">
    <div class="form-group">
      <label class="col-md-2 control-label">Name</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.name %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Hours</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.hours %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Phone</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.phone %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Address</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.address %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Description</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.description %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Social twitter</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.social_twitter %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Social fb</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.social_fb %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Social isntagram</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.social_isntagram %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Social pinsterest</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.social_pinsterest %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Tags</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @spot.tags %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="form-actions col-md-offset-2 col-md-10">
    <%= link_to fa_icon_tag("pencil") + ' Edit', edit_spot_path(@spot), class: 'btn btn-primary' %>
    <%= link_to 'Back', spots_path, class: 'btn' %>
  </div>
</div>
