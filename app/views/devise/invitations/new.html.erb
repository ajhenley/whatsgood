<div class="page-header">
  <div class="container">
    <h2>Request an Invite</h2>
  </div>
</div>

<div class="container">
  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { class: "form-horizontal", novalidate: true }) do |f| %>
    <%= f.hidden_field :invitation_token %>

    <div class="form-inputs">
      <% resource.class.invite_key_fields.each do |field| -%>
        <%= f.form_group field do |f| %>
          <%= f.label field, class: "col-md-2 control-label" %>
          <div class='col-md-10'>
            <%= f.text_field field, autofocus: true, class: "form-control"  %>
            <%= f.error_messages %>
          </div>
        <% end %>
      <% end -%>
    </div>

    <div class="actions col-md-offset-2 col-md-10">
      <%= f.submit "Request an Invite", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
