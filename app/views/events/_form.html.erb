<%= form_for(@event, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :what do |f| %>
      <%= f.label :what, class: 'col-md-2 control-label' %>
      <div class='col-md-10'>
        <%= f.text_field :what, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
    <%= f.form_group :description do |f| %>
      <%= f.label :description, class: 'col-md-2 control-label' %>
      <div class='col-md-10'>
        <%= f.text_area :description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
    <%= f.form_group :when do |f| %>
      <%= f.label :when, class: 'col-md-2 control-label' %>
      <div class='col-md-10'>
        <%= f.date_select :when, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
    <%= f.form_group :spots do |f| %>
      <%= f.label :spots, class: 'col-md-2 control-label' %>
      <div class='col-md-10'>
        <%= f.text_field :spots, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
  </div>

  <div class="form-actions col-md-offset-2 col-md-10">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", events_path, class: 'btn' %>
  </div>
<% end %>
