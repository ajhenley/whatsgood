<div class="page-header">
  <div class="container">
    <h2>Accept your Invite</h2>
  </div>
</div>

<div class="container">
  <p class="text-center">Create a password to activate your invite.</p>
  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
    <%= f.hidden_field :invitation_token %>

    <div class="form-inputs">
      <%= f.form_group :password do |f| %>
        <%= f.label :password, class: 'col-md-2 control-label' %>
        <div class='col-md-10'>
          <%= f.password_field :password, autofocus: true, class: 'form-control' %>
          <%= f.error_messages %>
        </div>
      <% end %>
      <%= f.form_group :password_confirmation do |f| %>
        <%= f.label :password_confirmation, class: 'col-md-2 control-label' %>
        <div class='col-md-10'>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
          <%= f.error_messages %>
        </div>
      <% end %>
    </div>

    <div class="actions col-md-offset-2 col-md-10">
      <%= f.submit "Activate Invite", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
